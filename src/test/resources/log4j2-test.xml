<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.github.mlangc.zio.interop.log4j2">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} a[%X{a}],b[%X{b}],c[%X{c}] %-5level %logger{36} - %msg%n" />
        </Console>

        <Test name="Test"/>
    </Appenders>

    <Loggers>
        <Logger name="com.github.mlangc.zio.interop.log4j2" level="debug">
            <AppenderRef ref="Test"/>
        </Logger>

        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>